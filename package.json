{
  "name": "hachiko",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "GitHub App for orchestrating technical migrations in large legacy codebases",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/launchdarkly/hachiko"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "build": "tsc -b",
    "dev": "probot run ./dist/index.js",
    "dev:probot:test": "cross-env PROBOT_WEBHOOK_PROXY_URL=$SMEE probot run ./dist/index.js",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage",
    "docs:check": "node scripts/check-docs-links.js",
    "scripts:fire-webhook": "ts-node scripts/send-webhook.ts",
    "scripts:assert-state": "ts-node scripts/assert-state.ts",
    "scripts:simulate-merge": "ts-node scripts/sim-merge.ts",
    "scripts:list-flags": "tsx src/scripts/hachiko-list-flags.ts"
  },
  "dependencies": {
    "@launchdarkly/node-server-sdk": "^9.6.3",
    "@octokit/core": "^6.1.2",
    "@octokit/rest": "^21.0.2",
    "@types/minimatch": "^6.0.0",
    "execa": "^9.5.1",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.0.3",
    "pino": "^9.5.0",
    "probot": "^13.3.8",
    "tsx": "^4.20.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@octokit/webhooks-types": "^7.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/pino": "^7.0.5",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.9",
    "c8": "^10.1.2",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
